<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/box_outline"
    android:backgroundTint="@color/very_lite_grey" >

    <!-- Pin Icon -->

    <ImageView
        android:id="@+id/imgGpsPin"
        android:layout_width="8dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/gps_pin"/>

    <ImageView
        android:id="@+id/imgSpeciesListItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/fish_species_image"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/txtSpeciesNameListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
